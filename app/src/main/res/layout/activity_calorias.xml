<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="24dp"
        tools:ignore="MissingConstraints">
        <TextView
            android:id="@+id/lblCalorias"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lblCalorias"
            android:textColor="#7DDC6D"
            android:textSize="38sp"
            android:textStyle="italic"
            android:layout_marginBottom="24dp"/>

        <!-- Primer ingreso de calorias -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginVertical="8dp"
            android:padding="16dp"
            android:gravity="center"
            android:layout_marginHorizontal="16dp"
            android:clipToOutline="true"
            android:background="@drawable/rounded_bg">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/lblCaloria1"
                android:textSize="22dp"
                android:textStyle="bold"
                android:textColor="#000000"/>
            <EditText
                android:id="@+id/txtCantidadCalorias1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/txtCantidadCalorias1"/>
        </LinearLayout>

        <!-- Segundo ingreso de calorias -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginVertical="8dp"
            android:padding="16dp"
            android:gravity="center"
            android:layout_marginHorizontal="16dp"
            android:clipToOutline="true"
            android:background="@drawable/rounded_bg">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/lblCaloria2"
                android:textSize="22dp"
                android:textStyle="bold"
                android:textColor="#000000"/>
            <EditText
                android:id="@+id/txtCantidadCalorias2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/txtCantidadCalorias2"/>
        </LinearLayout>

        <!-- Tercer ingreso de calorias -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginVertical="8dp"
            android:padding="16dp"
            android:gravity="center"
            android:layout_marginHorizontal="16dp"
            android:clipToOutline="true"
            android:background="@drawable/rounded_bg">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/lblCaloria3"
                android:textSize="22dp"
                android:textStyle="bold"
                android:textColor="#000000"/>
            <EditText
                android:id="@+id/txtCantidadCalorias3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/txtCantidadCalorias3"/>
        </LinearLayout>

        <!-- Cuarto ingreso de calorias -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginVertical="8dp"
            android:padding="16dp"
            android:gravity="center"
            android:layout_marginHorizontal="16dp"
            android:clipToOutline="true"
            android:background="@drawable/rounded_bg">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/lblCaloria4"
                android:textSize="22dp"
                android:textStyle="bold"
                android:textColor="#000000"/>
            <EditText
                android:id="@+id/txtCantidadCalorias4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/txtCantidadCalorias4"/>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/txtMostrarCalorias"
            android:layout_marginTop="25dp"
            android:textSize="22dp"
            android:textStyle="bold"
            android:textColor="#000000"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>